{
  "name": "gumdrop",
  "version": "1.1.1",
  "description": "Script to display Markdown documents as static HTML pages",
  "author": "MÃ¡rton Visnovitz <vimtaai@inf.elte.hu>",
  "license": "MIT",
  "main": "build/gumdrop.min.js",
  "repository": "github:vimtaai/gumdrop",
  "bugs": "https://github.com/vimtaai/gumdrop/issues",
  "homepage": "https://github.com/vimtaai/gumdrop#readme",
  "scripts": {
    "build": "parcel build src/index.js --out-dir build --out-file gumdrop.min.js",
    "build:dev": "parcel build src/index.js --out-dir build --out-file gumdrop.js --no-minify",
    "watch": "parcel watch src/index.js --out-dir build --out-file gumdrop",
    "prepare": "npm run build && npm run build:dev"
  },
  "dependencies": {
    "markdown-it": "^8.4.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3"
  },
