{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "outDir": "esm",
    "moduleResolution": "node",
    "rootDirs": ["src", "node_modules"],
    "baseUrl": "src",
    "declaration": true,
    "strict": true,
    "lib": ["ES2017"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
